<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js"></script>
<script>
  const canvas = document.getElementById('confetti-canvas');
  const confetti = window.confetti.create(canvas, {
    resize: true,      
    useWorker: true    
  });

  confetti({
    particleCount: 200,
    spread: 120,
    origin: { y: 0.5 },
    ticks: 200
  });


  setTimeout(() => {
    confetti({
      particleCount: 100,
      spread: 70,
      origin: { y: 0.3 }
    });
  }, 600);

</script>

